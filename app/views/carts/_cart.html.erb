<article>
  <% if notice %>
    <aside id="notice"><%= notice %><aside>
  <% end %>

  <h2><%= t('.title') %></h2>
  <table>

    <%= render(cart.line_items) %>
    <tfoot>
        <tr>
            <th colspan="2">Total:</th>
            <td class="price"><%=number_to_currency(cart.total_price, unit:'Â£')%></td>
        </tr>
    </tfoot>
  </table>

  <div class="actions">
    <%= button_to t('.empty'), cart, method: :delete, data: { confirm: 'Are you sure?'}, style: "color:#bf8eb1; background-color:#fff; border: solid 1px #bf8eb1;" %>
    <%= button_to t('.checkout'), new_order_path, method: :get, class: "checkout", style: "color:#bf8eb1; background-color:#fff; border: solid 1px #bf8eb1;" %>
  </div>
</article>
